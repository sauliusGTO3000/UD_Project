{% extends 'base.html.twig' %}

{% block title %}Subscriber index{% endblock %}

{% block body %}
    <h1>Subscriber index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Birthday</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subscriber in subscribers %}
            <tr>
                <td>{{ subscriber.id }}</td>
                <td>{{ subscriber.firstName }}</td>
                <td>{{ subscriber.lastName }}</td>
                <td>{{ subscriber.birthday ? subscriber.birthday|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ subscriber.email }}</td>
                <td>
                    <a href="{{ path('subscriber_show', {'id': subscriber.id}) }}">show</a>
                    <a href="{{ path('subscriber_edit', {'id': subscriber.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('subscriber_new') }}">Create new</a>
{% endblock %}