<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset("build/css/app.css") }}">
            <style>
                @font-face {
                    font-family: "HeadlandOne-Regular";
                    src: url( /fonts/HeadlandOne-Regular.ttf ); /* IE */
                    src: local("HeadlandOne-Regular"), url("/fonts/HeadlandOne-Regular.ttf"); /*non-IE*/
                }
                .post{
                    font-family: "HeadlandOne-Regular";
                }
            </style>
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
        <script src="{{ asset('build/js/app.js') }}"></script>
        {#<script src="{{ asset('build/js/functions.js') }}"></script>#}
        {% endblock %}
    </body>
</html>
